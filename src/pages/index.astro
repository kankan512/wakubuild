---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';
import ServicesSection from '../components/ServicesSection.astro';
import CompanyOverview from '../components/CompanyOverview.astro';

const pageTitle = 'WAKU BUILD | 事業成長したい経営者のためのIT化伴走パートナー';
const description = 'WAKU BUILD（ワクビル）は、人×AIの協働でDX伴走支援・AIリスキリング研修・システム・アプリ開発を行います。現場に寄り添う伴走型チームです。';
---
<Layout title={pageTitle} description={description} pathname="/">
  <HeroSection />
  <ServicesSection />
  <CompanyOverview />
  <section
    class="relative w-full py-16 overflow-hidden"
    style="background-image: linear-gradient(rgba(0,151,178,0.5), rgba(0,151,178,0.5)), url('/top/cta_bg.jpg'); background-size: cover; background-position: center;"
  >
    <div class="section-container relative z-10 flex justify-center">
      <div class="card p-8 md:p-10 space-y-6 max-w-3xl w-full bg-white/95 border-white/60">
        <div>
          <h3 class="text-xl font-semibold text-slate-900">まずは話すところから</h3>
          <p class="text-slate-600 text-sm mt-2">
            課題がぼんやりしていても問題ありません。まずはちょっとした課題感だけでもお気軽にご相談ください。
          </p>
        </div>
        <div class="flex flex-col sm:flex-row gap-3">
          <a class="btn-primary w-full sm:w-auto justify-center" href="/contact">相談してみる</a>
          <a class="inline-flex items-center justify-center px-4 py-3 rounded-lg border border-slate-200 hover:border-brand-primary hover:text-brand-dark transition w-full sm:w-auto" href="/services">
            サービスを見る
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
