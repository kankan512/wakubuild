---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SEO from '../components/SEO.astro';
import '../styles/global.css';

const {
  title = 'WAKU BUILD | 事業成長したい経営者のためのIT化伴走パートナー',
  description = 'WAKU BUILD（ワクビル）のコーポレートサイト。DX伴走支援、AIリスキリング研修、業務システム・アプリ開発を提供。',
  pathname = '/',
} = Astro.props;
---
<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <SEO {title} {description} {pathname} />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header pathname={pathname} />
    <main id="page-content" class="flex-1 pt-16 page-enter">
      <slot />
    </main>
    <Footer />
    <script>
      // シンプルなページ遷移フェード。ヘッダー/フッターは固定で、mainのみをフェードさせる。
      const main = document.getElementById('page-content');
      const isInternal = (href) => {
        try {
          const url = new URL(href, window.location.href);
          return url.origin === window.location.origin;
        } catch {
          return false;
        }
      };
      document.addEventListener('click', (e) => {
        const link = e.target.closest('a');
        if (!link || link.target === '_blank' || link.hasAttribute('download')) return;
        if (!isInternal(link.href)) return;
        e.preventDefault();
        if (main) {
          main.classList.remove('page-enter');
          main.classList.add('page-leave');
        }
        const navigate = () => (window.location.href = link.href);
        window.setTimeout(navigate, 180);
      });
      window.addEventListener('pageshow', () => {
        main?.classList.remove('page-leave');
        main?.classList.add('page-enter');
      });
    </script>
  </body>
</html>
